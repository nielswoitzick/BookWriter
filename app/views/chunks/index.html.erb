<h1>Listing chunks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Section</th>
    <th>Content</th>
    <th>User</th>
    <th>Book</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @chunks.each do |chunk| %>
  <tr>
    <td><%= chunk.title %></td>
    <td><%= chunk.section %></td>
    <td><%= chunk.content %></td>
    <td><%= chunk.user %></td>
    <td><%= chunk.book %></td>
    <td><%= link_to 'Show', chunk %></td>
    <td><%= link_to 'Edit', edit_chunk_path(chunk) %></td>
    <td><%= link_to 'Destroy', chunk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

