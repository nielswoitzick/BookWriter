<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Edition</th>
    <th>Published</th>
    <th>Genre</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.edition %></td>
    <td><%= book.published %></td>
    <td><%= book.genre %></td>
    <td><%= book.tags %></td>
    <td><%= button_to 'Show', book, method: :get %></td>
    <td><%= button_to 'Edit', edit_book_path(book), method: :get %></td>
    <td><%= button_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
